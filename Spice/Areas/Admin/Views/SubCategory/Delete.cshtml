@model Spice.Models.ViewModel.SubCategoryAndCategoryViewModel
@using Spice.Extension

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Sub Category</h2>
<br />

<div class="border backgroundwhite row">
    <div class="col-8">
        <form method="post" asp-action="Details">
            <input type="hidden" asp-for="SubCategory.CategoryId" />
            <input type="hidden" asp-for="SubCategory.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Category.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select disabled id="ddlselectlist" asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)"
                            class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input disabled asp-for="SubCategory.Name" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_DeleteAndBacktoListPartial" model="Model.SubCategory.Id" />
                </div>
            </div>

        </form>
    </div>
</div>
